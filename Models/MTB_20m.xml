<PropertyList>

 <path>MTB_20m.ac</path>
 <offsets>
  <!-- x/y/z == back/right/up. -->
  <x-m> 0.00 </x-m>
  <z-m> 0.00 </z-m>
 </offsets>

 <!-- Shader effects -->
 <!-- effect>
  <inherits-from>Effects/reflect</inherits-from>
  <object-name></object-name>
 </effect -->

 <!-- Rembrandt transparency markup. -->
 <!-- effect>
  <inherits-from>Effects/model-transparent</inherits-from>
  <object-name></object-name>
 </effect -->

 <!-- Livery selection =====================================================-->
 <animation>
  <type>material</type>
  <object-name>hull</object-name>
  <property-base>sim/model/livery</property-base>
  <texture-prop>texture</texture-prop>
  <texture>Liveries/T26.png</texture>
 </animation>

 <!-- External lights ======================================================-->
 <model>
  <name>Port navigation light</name>
  <path>Aircraft/Short_Empire/Models/Lights/RedLight.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up. -->
   <x-m>  9.60 </x-m>
   <y-m> -1.15 </y-m>
   <z-m>  1.14 </z-m>
  </offsets>
  <overlay>
   <parameters>
    <rated-power type="double">1.0</rated-power> <!-- Watts -->
    <min-power   type="double">1.0</min-power>   <!-- Watts -->
    <current-power-property>controls/lighting/nav-lights</current-power-property>
   </parameters>
  </overlay>
 </model>
 <model>
  <name>Starboard navigation light</name>
  <path>Aircraft/Short_Empire/Models/Lights/GreenLight.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up. -->
   <x-m>  9.60 </x-m>
   <y-m>  1.15 </y-m>
   <z-m>  1.14 </z-m>
  </offsets>
  <overlay>
   <parameters>
    <rated-power type="double">1.0</rated-power> <!-- Watts -->
    <min-power   type="double">1.0</min-power>   <!-- Watts -->
    <current-power-property>controls/lighting/nav-lights</current-power-property>
   </parameters>
  </overlay>
 </model>
 <model>
  <name>Top light</name>
  <path>Aircraft/Short_Empire/Models/Lights/WhiteLight.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up. -->
   <x-m> 9.30 </x-m>
   <y-m> 0.00 </y-m>
   <z-m> 4.30 </z-m>
  </offsets>
  <overlay>
   <parameters>
    <rated-power type="double">1.0</rated-power> <!-- Watts -->
    <min-power   type="double">1.0</min-power>   <!-- Watts -->
    <current-power-property>controls/lighting/nav-lights</current-power-property>
   </parameters>
  </overlay>
 </model>

 <!-- Particle effects ======================================================-->
 <model>
  <name>Fore Port</name>
  <overlay>
   <particlesystem>
    <shooter>
     <phi-min-deg>-80.0</phi-min-deg>
     <phi-max-deg>-100.0</phi-max-deg>
    </shooter>
   </particlesystem>
  </overlay>
  <path>Aircraft/MTB_20m/Models/Effects/wake.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>  2.00 </x-m>
   <y-m> -0.50 </y-m>
   <z-m> -1.50 </z-m>
  </offsets>
 </model>
 <model>
  <name>Fore Starboard</name>
  <overlay>
   <particlesystem>
    <shooter>
     <phi-min-deg>80.0</phi-min-deg>
     <phi-max-deg>100.0</phi-max-deg>
    </shooter>
   </particlesystem>
  </overlay>
  <path>Aircraft/MTB_20m/Models/Effects/wake.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>  2.00 </x-m>
   <y-m>  0.50 </y-m>
   <z-m> -1.50 </z-m>
  </offsets>
 </model>

 <animation>
  <type>translate</type>
  <object-name>Fore Port</object-name>
  <object-name>Fore Starboard</object-name>
  <property>velocities/groundspeed-kt</property>
  <interpolation>
   <entry><ind>0.0</ind><dep>0.0</dep></entry>
   <entry><ind>50.0</ind><dep>-0.4</dep></entry>
  </interpolation>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
 </animation>
 <animation>
  <type>rotate</type>
  <object-name>Fore Port</object-name>
  <object-name>Fore Starboard</object-name>
  <property>orientation/roll-deg</property>
  <offset-deg>0.0</offset-deg>
  <factor>1.0</factor>
  <center>
   <x-m>  0.00 </x-m>
   <y-m>  0.00 </y-m>
   <z-m> -1.50 </z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>
 <animation>
  <type>translate</type>
  <object-name>Fore Port</object-name>
  <object-name>Fore Starboard</object-name>
  <property>velocities/groundspeed-kt</property>
  <interpolation>
   <entry><ind>0.0</ind><dep>0.0</dep></entry>
   <entry><ind>50.0</ind><dep>3.0</dep></entry>
  </interpolation>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>
 <animation>
  <type>translate</type>
  <object-name>Fore Port</object-name>
  <property>velocities/groundspeed-kt</property>
  <interpolation>
   <entry><ind>0.0</ind><dep>0.0</dep></entry>
   <entry><ind>50.0</ind><dep>1.0</dep></entry>
  </interpolation>
  <axis>
   <x>0.0</x>
   <y>-1.0</y>
   <z>0.0</z>
  </axis>
 </animation>
 <animation>
  <type>translate</type>
  <object-name>Fore Starboard</object-name>
  <property>velocities/groundspeed-kt</property>
  <interpolation>
   <entry><ind>0.0</ind><dep>0.0</dep></entry>
   <entry><ind>50.0</ind><dep>1.0</dep></entry>
  </interpolation>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <model>
  <name>Port propeller</name>
  <overlay>
   <particlesystem>
    <condition>
     <and>
      <property>controls/engines/engine[0]/clutch</property>
      <greater-than>
       <property>engines/engine[0]/thruster/rpm</property>
       <value>600.0</value>
      </greater-than>
     </and>
    </condition>
   </particlesystem>
  </overlay>
  <path>Aircraft/MTB_20m/Models/Effects/propeller_wake.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m> 19.70 </x-m>
   <y-m> -0.80 </y-m>
   <z-m> -2.00 </z-m>
  </offsets>
 </model>
 <model>
  <name>Starboard propeller</name>
  <overlay>
   <particlesystem>
    <condition>
     <and>
      <property>controls/engines/engine[1]/clutch</property>
      <greater-than>
       <property>engines/engine[1]/thruster/rpm</property>
       <value>600.0</value>
      </greater-than>
     </and>
    </condition>
   </particlesystem>
  </overlay>
  <path>Aircraft/MTB_20m/Models/Effects/propeller_wake.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m> 19.70 </x-m>
   <y-m>  0.80 </y-m>
   <z-m> -2.00 </z-m>
  </offsets>
 </model>

 <!-- LOD for the model as a whole =========================================-->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>15000</max-m>
 </animation>

 <nasal>
  <load>
##############################################################################
# The on-load Nasal is not executed when this file is loaded as the user
# aircraft.
##############################################################################
var rplayer = cmdarg();
print("LOAD MTB_20m", rplayer.getPath());

# Set up property aliases for animations.
#  Wakes.
#rplayer.getNode("fdm/jsbsim/hydro/coefficients/C_Delta", 1).
#  alias(rplayer.getNode("sim/multiplay/generic/float[0]"));

# Exterior lights.
#rplayer.getNode("systems/electrical/lamps/navigation/port-power-W", 1).
#  alias(rplayer.getNode("sim/multiplay/generic/float[4]"));

# Set up livery support.
var livery_update =
  aircraft.livery_update.new("Aircraft/MTB_20m/Models/Liveries", 10);

##############################################################################
  </load>
  <unload>
##############################################################################
var rplayer = cmdarg();
print("UNLOAD MTB_20m ", rplayer.getPath());
# Stop the livery support.
livery_update.stop();
##############################################################################
  </unload>
 </nasal>


</PropertyList>
