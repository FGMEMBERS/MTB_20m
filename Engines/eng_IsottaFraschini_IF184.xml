 <function name="propulsion/engine[#]/real-thrust-lbs">
  <min>
   <product>
    <property>propulsion/engine[#]/clutch-pos-norm</property>
    <property>hydro/rho-slug_ft3</property>
    <value>0.000277777</value> <!-- 1/60^2 -->
    <property>propulsion/engine[#]/propeller-rpm</property>
    <property>propulsion/engine[#]/propeller-rpm</property>
    <value>27.82</value>        <!-- D^4 -->
    <property>propulsion/engine[#]/hydro-thrust-coefficient</property>
   </product>
   <value>100000.0</value>
  </min>
 </function>
 
 <function name="propulsion/engine[#]/power-required-hp">
  <product>
   <property>propulsion/engine[#]/clutch-pos-norm</property>
   <value>0.0018181818</value> <!-- slug ft^2 / s^3 -> hp -->
   <property>hydro/rho-slug_ft3</property>
   <value>0.000004629</value>  <!-- 1/60^3 -->
   <property>propulsion/engine[#]/propeller-rpm</property>
   <property>propulsion/engine[#]/propeller-rpm</property>
   <property>propulsion/engine[#]/propeller-rpm</property>
   <value>63.89</value>        <!-- D^5 -->
   <property>propulsion/engine[#]/hydro-power-coefficient</property>
  </product>
 </function>

 <function name="propulsion/engine[#]/required-aero-power-coefficient">
  <max>
   <product>
    <property>propulsion/engine[#]/clutch-pos-norm</property>
    <quotient>
     <property>hydro/rho-slug_ft3</property>
     <property>atmosphere/rho-slugs_ft3</property>
    </quotient>
    <property>propulsion/engine[#]/hydro-power-coefficient</property>
   </product>
   <value>0.05</value>
  </max>
 </function>

